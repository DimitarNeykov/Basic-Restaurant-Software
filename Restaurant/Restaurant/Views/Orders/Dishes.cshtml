@model IEnumerable<Restaurant.ViewModels.Orders.DishViewModel>
@{
    ViewData["Title"] = "Dishes";
}

<div class="row mt-3">
    <h3 class="col-md-6">Select Dish</h3>
</div>

<div class="section mt-3">
    <div class="row">
        @foreach (var dish in Model)
        {
            <div class="col-md-3 mb-4">
                <a asp-controller="Orders" asp-action="AddDishToOrder" asp-route-orderId="@dish.OrderId" asp-route-dishId="@dish.Id">
                    <div class="component">
                        <div class="card bg-primary">
                            <div class="card-body text-center mt-5 mb-5">
                                <h1 class="card-title text-white">@dish.Name</h1>
                                <h3 class="card-title text-white">@dish.Price лв.</h3>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>