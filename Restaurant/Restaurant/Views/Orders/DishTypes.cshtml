@model IEnumerable<Restaurant.ViewModels.Orders.DishTypesViewModel>
@{
    ViewData["Title"] = "All Types";
}

<div class="row mt-3">
    <h3 class="col-md-6">Select Dish Type</h3>
</div>

<div class="section mt-3">
    <div class="row">
        @foreach (var type in Model)
        {
            <div class="col-md-3 mb-4">
                <a asp-controller="Orders" asp-action="Dishes" asp-route-orderId="@type.OrderId" asp-route-dishTypeId="@type.Id">
                    <div class="component">
                        <div class="card bg-primary">
                            <div class="card-body text-center mt-5 mb-5">
                                <h1 class="card-title text-white">@type.Name</h1>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
